@page "/"

@inject NavigationManager NavigationManager

<div class="container-fluid mt-0 px-0">
    <!-- Banner Section -->
    <div class="hero-section position-relative text-white text-center d-flex flex-column justify-content-center align-items-center">
        @* <div class="overlay"></div> *@
        <div class="content animate__animated animate__fadeInDown">
            @* <h1 class="display-3 fw-bold">Exclusive Ticket Reservation</h1> *@
            @* <p class="lead">Join us for an unforgettable experience!</p> *@
        </div>
    </div>

    <!-- Event Details & Location Section -->
    <div class="container event-details mt-3 mb-2 px-2 px-md-0">
        <div class="row align-items-center gy-4">
            <!-- Event Details -->
            <div class="col-12 col-md-6">
                <div class="card shadow-lg p-0 animate__animated animate__fadeInLeft event-card">
                    <div class="card-body">
                        <h2 class="card-title text-center mb-2 fw-bold">📢 Maroons Eve 2025</h2>
                        <p><strong>🎉</strong>A special gathering for past students of Ananda and Nalanda Colleges to celebrate friendship, unity, and cherished memories. Let's reconnect, relive, and enjoy an evening of fun and laughter. Let’s celebrate the spirit of Ananda & Nalanda together! </p>
                        <p><strong>📅 Date:</strong> 25 April, 2025</p>
                        @* <p class="d-flex align-items-center text-dark"> *@
                        @*      <strong>📞</strong>  *@
                        @*      <a href="tel:+14162705874" class="ms-2 text-decoration-none text-dark">+1 416 270 5874</a>  *@
                        @* </p> *@
                        <p><strong>⏰ Time: </strong>7:00 PM</p>
                        @* <p class="d-flex align-items-center"> *@
                        @*     <strong>📧</strong> *@
                        @*     <a href="mailto:info@event.com" class="ms-2 text-dark">info@event.com</a> *@
                        @* </p> *@
                        <p><strong>🎶 Event Highlights:</strong> Sumptuous buffet, Music, Karaoke, Dance and Networking</p>
                        <p><strong>🎟️ Tickets:</strong> $40</p>
                        <p><strong>🎩 Dress Code:</strong> Semi Formal</p>
                        <p class="fw-bold text-center"><em>🔥 Hurry up and reserve your tickets! 🔥</em></p>
                        <div class="text-center mt-3">
                            <button type="button" @onclick="onReserveClick" class="btn btn-gold btn-md">
                                🎟️ Reserve Now
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Location Section with Animation -->
            <div class="col-12 col-md-6">
                <div class="card shadow-lg p-2 animate__animated animate__fadeInRight event-card">
                    <div class="card-body">
                        <h2 class="card-title text-center mb-4 fw-bold">🌍 Event Venue</h2>

                        <div class="map-container rounded">
                            <!-- Show Loading Spinner -->
                            @if (isLoading)
                            {
                                <div id="map-loader">
                                    ⏳ Loading...
                                </div>
                            }
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d719.638373042528!2d-79.35673812430336!3d43.823620293535285!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89d4d360c215587b%3A0x491e2fb4ced67c67!2sNew%20Jaasmin%20Banquet%20Hall%20and%20Convention%20Centre!5e0!3m2!1sen!2sca!4v1741700363333!5m2!1sen!2sca"
                                    width="100%"
                                    height="330"
                                    style="border:0; border-radius: 10px;"
                                    allowfullscreen
                                    loading="eager"
                                    referrerpolicy="no-referrer-when-downgrade"
                                    @onload="OnMapLoad">
                            </iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Custom CSS -->
<style>

    .media (max-width: 768px) {
        .display-4 {
            font-size: 1.8rem;
        }

        .lead {
            font-size: 1rem;
        }

        .event-details {
            padding-bottom: 20px;
        }

        .event-card {
            padding: 1rem;
        }
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.6);
    }

    .event-card {
        background: rgb(173 168 168 / 80%);
        border-radius: 8px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(10px);
    }

    .btn-gold {
        background: linear-gradient(135deg, #d4af37, #b8860b);
        color: white !important;
        font-weight: bold;
    }

        .btn-gold:hover {
            background: linear-gradient(135deg, #b8860b, #8b6508);
            color: #fff;
            border-color: #ffffff8f;
        }

    .map-container {
        border-radius: 8px;
    }
</style>

@code {
    private bool isLoading = true;

    protected async Task onReserveClick()
    {
        NavigationManager.NavigateTo("/reserve-ticket");
    }

    private void OnMapLoad()
    {
        isLoading = false;
    }
}

